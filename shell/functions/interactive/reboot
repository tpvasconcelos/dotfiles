
reboot() {
  YESNO_MSG="Please type $(bold "y/Y") to proceed or $(bold "n/N") to abort... $(bold "[y/n]") "
  bold "Trying to reboot..."
  while true; do
    echo -n "$YESNO_MSG"
    read -r -k 1 yn
    case $yn in
    [Yy]*)
      bold "\nRebooting..."
      sudo shutdown -r now
      ;;
    [Nn]*)
      bold "\nFine... ðŸ‘€"
      break
      ;;
    *) echo -e "\nOption not recognised... " ;;
    esac
  done
}
