restart_app() {
  # Restart a macOS app
  # Arguments:
  #   * $* : The app's full name
  # Examples:
  #   $ restart_app "Alfred 4"
  #   [INFO] - Killing "Alfred 4"
  #   [INFO] - Opening "Alfred 4"
  local app="${*}"
  log_info "Killing \"${app}\""
  osascript -e "quit app \"${app}\"" &&
    log_info "Opening \"${app}\"" &&
    open -a "${app}"
}
