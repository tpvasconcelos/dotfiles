# https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 100

[*.{zsh,zprofile,zshenv,zshrc}]
max_line_length = 88
ij_visual_guides = 72
